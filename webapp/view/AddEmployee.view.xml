<mvc:View controllerName="sapips.training.employeeapp.controller.AddEmployee"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"  
    xmlns="sap.m">
    <Page id="AddEmployee" title="test">
      <Panel id="panelEmployeeDetails" headerText="Create Employee Details">
        <form:SimpleForm id="formEmployee" editable="true">
          <form:content>
            <Label id="lblEmployeeId" text="Employee Id" />
            <Input id="inEmployeeId" value="{employeeModel>/EmployeeID}" editable="false"/>     

            <Label id="lblFirstName" text="First Name"/>
            <Input id="inFirstName" value="{employeeModel>/FirstName}" required="true" placeholder="Please enter a value" liveChange=".onInputChangeForId"/>

            <Label id="lblLastName" text="Last Name" />
            <Input id="inLastName" value="{employeeModel>/LastName}" required="true" placeholder="Please enter a value" liveChange=".onInputChangeForId"/>

            <Label id="lblAge" text="Age" />
            <Input id="inAge" value="{employeeModel>/Age}" required="true" placeholder="Please enter a value"/>         

            <Label id="lblDate" text="Date of Hire" />
            <DatePicker
              id="DP1"
              placeholder="Enter Date"
              change=".onInputChangeForId"
              class="sapUiSmallMarginBottom"
              required="true"/> 

             <Label id="lblCareerLevel" text="Career Level" />
            <ComboBox 
              id="inCareerLevel" 
              width="100%" 
              required="true" 
              placeholder="Please enter a value"
              value="{employeeModel>/CareerLevel}"
              items="{/CareerList}">
              <items>
                    <core:Item id="_IDCLItem" key="{CareerId}" text="{CareerLevel}" />
              </items>
            </ComboBox>

            <Label id="lblCurrentProject" text="Current Project" />
            <ComboBox 
              id="inCurrentProject" 
              width="100%" 
              required="true" 
              placeholder="Please enter a value"
              change="onCurrentProjectChange"
              value="{employeeModel>/CurrentProject}"
              items="{/ProjectList}">
              <items>
                <core:Item id="_IDCPItem" key="{ProjectId}" text="{ProjectName}" />
              </items>
            </ComboBox>                 
          </form:content>
        </form:SimpleForm>

        <Panel id="panelSkills" headerText="Skills">
              <HBox id="_IDGenHBox" justifyContent="End" width="100%">
                <Button text="Add" id="button0" press=".onAddItem"/>
                <Button text="Delete" id="button1" press=""/>
              </HBox>    

              <Table id="listEmployee"
                  items="{skillsModel>/}"
                  selectionChange="onSelectEmployee"
                  mode="MultiSelect"
                  inset="false">

                  <columns>
                      
                      <Column id="_IDGenColumn">
                          <Text id="_IDGenText" text="{i18n>productColumn}" />
                      </Column>
                      
                      
                      <Column id="_IDGenColumn1">
                          <Text id="_IDGenText1" text="{i18n>supplierColumn}" />
                      </Column>
                      
                  </columns>

                  
                  <items>
                      <ColumnListItem id="_IDGenColumnListItem">
                          <cells>
                            <Text id="_IDGenText3" text="{skillsModel>SkillName}" />
                            <Text id="_IDGenText4" text="{skillsModel>ProficiencyLevel}" />
                              
                          </cells>
                      </ColumnListItem>
                  </items>
              </Table> 
            
        </Panel>                      
      </Panel>
        <footer>
          <OverflowToolbar id="idOFTFooter">
            <ToolbarSpacer id="idTSpacerFooter" />
            <Button id="idBtnSave" text="Save" press=".onAddCreate"/>
            <Button id="idBtnCancel" text="Cancel"/>
          </OverflowToolbar>
        </footer>                
    </Page>
</mvc:View>