<mvc:View
  controllerName="sapips.training.employeeapp.controller.EmployeeList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  displayBlock="true">
 
  <Page id="employeePage" title="{i18n>title}">
    <content>
      <!-- Table for Employee List -->
      <Table
        id="employeeTable"
        mode="MultiSelect"
        items="{/Employee}"
        growing="true"
        growingScrollToLoad="true">
 
        <!-- Header with Dynamic Employee Count and Search -->
        <headerToolbar>
          <Toolbar id="employeeToolbar">
            <Text id="employeeCountText" text="Employee ()" class="sapUiTinyMarginBegin"/>
            <ToolbarSpacer id="toolbarSpacer" />
             <SearchField
              id="employeeSearchField"
              placeholder="Search by name"
              liveChange=".onSearch"
              width="20%"
            />
            <Button id="addButton"    text="Add"    icon="sap-icon://add"    press=".onAddEmployee" />
            <Button id="deleteButton" text="Delete" icon="sap-icon://delete" press=".onDeleteEmployee" />
          </Toolbar>
        </headerToolbar>
 
        <!-- Table Columns -->
        <columns>
          <Column id="colID"><Text        id="colIDText"          text="ID" /></Column>
          <Column id="colFirstName"><Text id="colFirstNameText"   text="First Name" /></Column>
          <Column id="colLastName"><Text  id="colLastNameText"    text="Last Name" /></Column>
          <Column id="colAge"><Text       id="colAgeText"         text="Age" /></Column>
          <Column id="colHireDate"><Text  id="colHireDateText"    text="Date of Hire" /></Column>
          <Column id="colCareer"><Text    id="colCareerText"      text="Career Level" /></Column>
          <Column id="colProject"><Text   id="colProjectText"     text="Current Project" /></Column>
        </columns>
 
        <!-- Table Rows -->
        <items>
          <ColumnListItem id="employeeRowItem"
          type="Navigation" press=".onEmployeePress">
            <cells>
              <Text id="cellID"         text="{EmployeeID}" />
              <Text id="cellFirstName"  text="{FirstName}" />
              <Text id="cellLastName"   text="{LastName}" />
              <Text id="cellAge"        text="{Age}" />
              <Text id="cellHireDate"   text="{DateHire}" />
              <Text id="cellCareer"     text="{CareerLevel}" />
              <Text id="cellProject"    text="{CurrentProject}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
  </Page>
</mvc:View>